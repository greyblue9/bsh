public static String getMethodRefString(CtClass ct, int mrefIdx) { javassist.bytecode.ConstPool pool = ct.getClassFile().getConstPool(); Object mref = pool.getItem(mrefIdx); String dcname = pool.getItem(pool.getItem(mref.classIndex).name).string;  String mdesc = pool.getItem(pool.getItem(mref.nameAndTypeIndex).typeDescriptor).string;  String mname = pool.getItem(pool.getItem(mref.nameAndTypeIndex).memberName).string; String str = String.format("%s.%s%s", ClassInfo.typeToName(dcname), mname, javassist.bytecode.SignatureAttribute.toMethodSignature(mdesc).toString().replace("<> ", "")).replaceAll("^(.+\\)) *([^ ].*)$", "$2 $1"); return str; };

