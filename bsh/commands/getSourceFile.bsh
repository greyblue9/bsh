
public static File getSourceFile(Object clsObjOrName) { URL surl = findSource(clsObjOrName); if (surl == null) return null;  PathInfo pi = PathInfo.getPathInfo(surl); if (!(surl.openConnection() instanceof JarURLConnection)) return PosixFileInputStream.resolve(new File(pi.path)); String inSrcPath = Pattern.compile("^(?:(?:[a-z]+:)|[!/]+)*/*").matcher(StringUtils.substringAfter(surl.getPath(), pi.path)).replaceAll(""); File localSrcFile = PosixFileInputStream.resolve(new File(new File(new File(pi.dir), "src").toURI().resolve(inSrcPath).getPath())); if (! localSrcFile.exists()) { localSrcFile = PosixFileInputStream.resolve(new File(new File(new File(pi.dir), "src1").toURI().resolve(inSrcPath).getPath())); }; if (! localSrcFile.exists()) { localSrcFile = PosixFileInputStream.resolve(new File(new File(new File(pi.dir), "src").toURI().resolve("main/java/".concat(inSrcPath)).getPath())); }; if (localSrcFile.exists()) return localSrcFile; return null; };

