public static Object invoke(String name, Object[] args) { ArrayList<Method> candidates = new ArrayList<Method>(); for (Class c: searchClassPath(null, new String[]{ "^[^$.]*$" })) { Method[] m = StringCollectionUtil.toStringFilter(c.getDeclaredMethods(), "^.*\\b"+name+"\\(.*$"); if (m.length == 0) continue; Collections.addAll(candidates, m); } for (Method possible: candidates.toArray(new Method[0])) { print(possible); try { result = possible.invoke(null, args); return result; } catch (InvocationTargetException ite) {  print(ite);  } } throw new NoSuchMethodException("Can find no suitable method with name '"+name+"', taking the arguments: "+ Arrays.toString(args)); }

