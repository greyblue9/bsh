public static void saveAndOpen(String src) { File tempFile = File.createTempFile("temp_", ".java", new TempFile(System.getProperty("java.io.tmpdir"))); if (writeFile(tempFile.getPath(), src.getBytes("UTF-8"))) { System.err.printf("Wrote %d bytes to %s\n", tempFile.length(), tempFile.getPath()); int ii = new Random().nextInt() % 3; switch (ii) { case 0: PosixFileInputStream.pexecSync("opena", tempFile.getPath()); break; case 1: PosixFileInputStream.pexecSync("openb", tempFile.getPath()); break; case 2: PosixFileInputStream.pexecSync("openc", tempFile.getPath()); break; }; } }

